// User function template for C++
class Solution {
  public:
    bool matSearch(vector<vector<int>> &mat, int x) {
        // your code here
        int i=0;
        int row=mat.size();
        int col=mat[0].size();
        int j=col-1;
        while (i < row && j >= 0) {
            if (mat[i][j] == x) {
                return true; 
            } 
            else if (mat[i][j] > x) {
                // Current value is too big, move left to smaller values
                j--; 
            } 
            else {
                // Current value is too small, move down to larger values
                i++; 
            }
        }
        
        return false;
    }
};
