class Solution {
  public:
    vector<int> calculateSpan(vector<int>& arr){
        //  code here
        int n=arr.size();
        vector<int> arr2(n);
        stack<int> s;
        for (int i=0;i<n;i++){
            while (!s.empty() && arr[s.top()] <= arr[i]) {
            s.pop();
            }
            if(s.empty()){
                arr2[i]=i+1;
            }else{
                arr2[i]=i-s.top();
            }
            s.push(i);
            
        }
    return arr2;
    }
};
