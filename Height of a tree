class Node {
public:
    int data;
    Node* left;
    Node* right;

    Node(int val) {
        data = val;
        left = right = NULL;
    }
};
*/

class Solution {
  public:
    int height(Node* root) {
        // code here
        if (root == nullptr) {
            return -1;
        }
        int heightl=height(root->left);
        int heightr=height(root->right);
        return 1+max(heightl,heightr);
    }
};
