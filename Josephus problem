class Solution {
  public:
    void solve(int i,int k,vector<int>& kill){
        if(kill.size()==1){
            return;
        }
        i=(i+k-1)%kill.size();
        kill.erase(kill.begin()+i);
        solve(i,k,kill);
    }
    int josephus(int n, int k) {
        // code here
        vector<int> kill;
        int i=0;
        
        for(int j=1;j<=n;j++){
            kill.push_back(j);
        }
        solve(i,k,kill);
        return kill[0];
    }
};
