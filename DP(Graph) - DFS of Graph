class Solution {
  public:
    vector<int> dfs(vector<vector<int>>& adj) {
        int V=adj.size();
     vector<int> dfs_order;
        vector<int> visited(V, 0);
        stack<int> st;

        // Start from node 0
        st.push(0);

        while (!st.empty()) {
            int curr = st.top();
            st.pop();

            // A node might be pushed multiple times, so check visited here
            if (!visited[curr]) {
                visited[curr] = 1;
                dfs_order.push_back(curr);
            }

            // Push neighbors into the stack
            // Note: To match recursive DFS order (left-to-right), 
            // you should push neighbors in reverse order.
            for (auto it = adj[curr].rbegin(); it != adj[curr].rend(); ++it) {
                if (!visited[*it]) {
                    st.push(*it);
                }
            }
        }
        return dfs_order;
    }
};

class Solution {
  public:
    void performDFS(int curr, vector<vector<int>>& adj, vector<bool>& visited, stack<int>& st) {
        visited[curr] = true;
        for (int neighbor : adj[curr]) {
            if (!visited[neighbor]) {
                performDFS(neighbor, adj, visited, st);
            }
        }
        st.push(curr);
    }
    vector<int> topoSort(int V, vector<vector<int>>& edges) {
        vector<vector<int>> adj(V);
        for (auto& edge : edges) {
            adj[edge[0]].push_back(edge[1]);
        }
        vector<bool> visited(V, false);
        stack<int> st;
        vector<int> result;
        for (int i = 0; i < V; i++) {
            if (!visited[i]) {
                performDFS(i, adj, visited, st);
            }
        }
        while (!st.empty()) {
            result.push_back(st.top());
            st.pop();
        }
        return result;
    }
};
