#include <iostream>
#include <algorithm>
#include <vector>

using namespace std;

// Function to check if we can place k cows with at least 'mid' distance
bool CanPlace(vector<int>& arr, int k, int mid) {
    int count = 1; // Place the first cow at the first stall
    int last_pos = arr[0];
    
    for (int j = 1; j < arr.size(); j++) {
        if (arr[j] - last_pos >= mid) {
            count++;
            last_pos = arr[j];
            if (count >= k) return true; // Optimization: exit early
        }
    }
    return false;
}

void solve() {
    int n, k;
    if (!(cin >> n >> k)) return; // Read number of stalls and cows
    
    vector<int> stalls(n);
    for (int i = 0; i < n; i++) {
        cin >> stalls[i];
    }
    
    sort(stalls.begin(), stalls.end());

    int low = 1;
    int high = stalls[n - 1] - stalls[0];
    int ans = 0;

    while (low <= high) {
        int mid = low + (high - low) / 2;
        if (CanPlace(stalls, k, mid)) {
            ans = mid;    // Try for a larger distance
            low = mid + 1;
        } else {
            high = mid - 1; // Distance too large, reduce it
        }
    }
    cout << ans << "\n";
}

int main() {
    // Fast I/O for competitive programming
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);

    int t;
    if (!(cin >> t)) return 0; // Read number of test cases
    while (t--) {
        solve();
    }

    return 0;
}
